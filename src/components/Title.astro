---
const { level = '1' } = Astro.props as Props;
const Tag = `h${level}`
---

<Tag><slot /></Tag>

<style>
  h2 {
    margin: 0 0 20px 0;
    padding: 0;
    color: #c91010;
    font: normal 28px IBM Plex Sans, sans-serif;
  }
  h3 {
    font-size: 19px;
    font-weight: bold;
    margin: 0 0 8px 0;
    letter-spacing: calc(1px / 5);
  }
  h4 {
    margin: 0 0 20px 0;
    padding: 0;
    color: #c91010;
    font: 300 20px IBM Plex Sans, sans-serif;
  }
</style>
