---
export interface Props {
  level: '1' | '2' | '3' | '4',
  style?: 'light'
}

const { level = '1', style = '' } = Astro.props as Props;
const Tag = `h${level}`
const Style = style
---

<Tag class={style}><slot /></Tag>

<style>
  h2 {
    margin: 0 0 20px 0;
    padding: 0;
    color: #c91010;
    font: normal 28px IBM Plex Sans, sans-serif;
  }

  h2:not(:first-of-type) {
    margin-top: 20px;
  }

  h2.light {
    margin: 0 0 20px 0;
    padding: 0;
    color: #c91010;
    font: 300 20px IBM Plex Sans, sans-serif;
  }

  h3 {
    font-size: 19px;
    font-weight: bold;
    margin: 0 0 8px 0;
    letter-spacing: calc(1px / 5);
  }

  h3:not(:first-of-type) {
    margin-top: 5px;
  }

  h4 {
    margin: 0 0 20px 0;
    padding: 0;
    color: #c91010;
    font: 300 20px IBM Plex Sans, sans-serif;
  }
</style>
